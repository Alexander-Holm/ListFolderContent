<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="SaveButton" TargetType="Button" >
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Padding" Value="8 4"/>
        <Setter Property="Margin" Value="20" />
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="SubmitButton" TargetType="Button">
        <Setter Property="Background" Value="#2063bc"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#103d8c" />
        <Setter Property="Padding" Value="14 8"/>
        <Setter Property="Margin" Value="20" />
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <!-- Backgrundsfärg är krånglig att ändra så det får räcka med textfärg -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#103d8c" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>