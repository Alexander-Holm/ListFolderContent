<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="ValidationError" DataType="ValidationError">
        <DockPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=TemplatedParent}}">
            <TextBlock 
                Text="!" 
                Foreground="Crimson"
                FontSize="22" FontWeight="SemiBold"/>
            <TextBlock VerticalAlignment="Center"
                Text="{Binding ErrorContent}" TextWrapping="Wrap"
                Foreground="Crimson" 
                FontSize="14" 
                Margin="6 4 0 0"/>
        </DockPanel>
    </DataTemplate>
    
</ResourceDictionary>